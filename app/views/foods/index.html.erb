<div class="container">

<p id="notice"><%= notice %></p>

<h1>Keto Approved Foods</h1>

<%= form_tag(foods_path, method: :get) do %>
  <%= text_field_tag :title, params[:title] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.title %></td>
        <td><%= food.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
